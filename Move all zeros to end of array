code link - https://www.geeksforgeeks.org/dsa/move-zeroes-end-array/


#include <bits/stdc++.h>

using namespace std;

void moveallZeros(vector<int>& arr){
    int n = arr.size();
    int count = 0;
  for(int i=0;i<n;i++){
      if(arr[i]!=0){
          swap(arr[i],arr[count]);
          count++;
      }
  }
}

int main()
{
    vector<int> arr = {1,2,0,4,3,0,5,0};
    moveallZeros(arr);
    for(int i:arr){
        cout<<i<<" ";
    }
    return 0;
}
