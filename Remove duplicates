#include<bits/stdc++.h>

void removeConsecutiveDuplicates(char *input) {
	int j=0;
    for(int i=0;input[i]!='\0';i++){
        if(input[i]!=input[i+1]){
            input[j++]=input[i];
        }
    }
    input[j]='\0';
}
