  #include <bits/stdc++.h>
using namespace std;

int checkSum(int arr[], int size, int sum){
    //base case
    if(size == 0){
        return sum;
    }else if(size == 1){
        return sum + arr[0];
    }
    sum += arr[0]+arr[1];
    return checkSum(arr+2,size-2,sum);
}

int main() {
	// your code goes here
	int arr[] = {2,4,8,16,32};
	int size = 5;
	int sum = 0;
    int ans = checkSum(arr,size,sum);
    cout<<ans<<endl;
return 0;
}
