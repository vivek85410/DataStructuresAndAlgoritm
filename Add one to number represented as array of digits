code link - https://www.geeksforgeeks.org/dsa/adding-one-to-number-represented-as-array-of-digits/


#include <bits/stdc++.h>
using namespace std;

vector<int> addOne(vector<int>& arr){
    int n  = arr.size();
    reverse(arr.begin(),arr.end());
    int start =0;
    while(start < n && arr[start] == 9){
        arr[start++] = 0;
    }  
        if(start == n){
            arr.push_back(1);
        }
        else{
            arr[start]++;
        }
    reverse(arr.begin(),arr.end());
    return arr;
}

int main() {
	vector<int> arr = {9,9,9};
	vector<int> result = addOne(arr);
	for(auto i : result){
	    cout<<i;
	}

}
