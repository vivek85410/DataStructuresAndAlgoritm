#include <bits/stdc++.h> 
void printPattern(int m, int n) {
    for(int i=0;i<m;i++){
        for(int j=0;j<n;j++){
            if(i==0 || i==m-1){
                cout<<"*";
            }
            else if(j==0 || j==n-1){
                cout<<"*";
            }
            else{
                cout<<" ";
            }
        }
        cout<<endl;
    }
}
