code link - https://www.geeksforgeeks.org/dsa/best-time-to-buy-and-sell-stock/


#include <bits/stdc++.h>
using namespace std;

int buyAndSellStock(vector<int> &arr){
    int n = arr.size();
    int minimum = INT_MAX;
    int result = 0;
    for(int i=0;i<n;i++){
        minimum = min(minimum,arr[i]);
        
        result = max(result, arr[i]-minimum);
    }
    return result;
}

int main() {
	vector<int> arr = {7,6,4,3,1};
	cout<<buyAndSellStock(arr);
    
return 0;
}
