code link - https://www.geeksforgeeks.org/dsa/sum-of-all-subarrays/


#include <bits/stdc++.h>
using namespace std;
int sumOfAllSubarray(vector<int> &v){
    int n = v.size();
    int sum = 0;
    for(int i=0;i<n;i++){
        sum += v[i] * (i+1) * (n-i);
    }
    return sum;
}

int main() {
	vector<int> arr = {1,4,5,3,2};
	cout<<sumOfAllSubarray(arr)<<endl;
return 0;
}
