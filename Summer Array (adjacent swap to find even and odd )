#include <bits/stdc++.h>
using namespace std;

int minAdjacentSwap(vector<int> &arr, int n){
    int i=0,count=0;
    while(i<n-1){
        int j = i+1;
        if((arr[i]%2==0) && arr[j]%2!=0){
            swap(arr[i],arr[j]);
            count++;
            i=0;
        }else{
            i++;
        }
    }
    return count;
}

int main() {
	// your code goes here
	int n;
	cin>>n;
	vector<int> arr(n);

	for(int i=0;i<n;i++){
	    cin>>arr[i];
	}
   	cout<<minAdjacentSwap(arr,n)<<endl;
	return 0;

}
