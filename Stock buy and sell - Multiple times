code link - https://www.geeksforgeeks.org/dsa/stock-buy-sell/


#include <bits/stdc++.h>
using namespace std;

int buyAndSellStockMultipleTimes(const vector<int> &arr){
    int n = arr.size();
    int result = 0;
    for(int i=1;i<n;i++){
        if(arr[i]>arr[i-1]){
            result += arr[i] - arr[i-1];
        }
    }
    return result;
}

int main() {
	vector<int> arr = {100,180,260,310,40,535,695};
	cout<<buyAndSellStockMultipleTimes(arr);
    
return 0;
}
