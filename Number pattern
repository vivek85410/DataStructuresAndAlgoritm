#include<iostream>
using namespace std;

int main(){

       /*  Read input as specified in the question.
	* Print output as specified in the question.
	*/
	int n;
	cin>>n;
	int j=0;
	for(int i=1;i<=n;i++){
		j = i;
		int k=i;
		while(k>0){
			cout<<j;
			j++;
			k--;
		}
		cout<<endl;
	}
  return 0;
}
