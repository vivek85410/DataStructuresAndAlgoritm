code link - https://www.codechef.com/practice/course/linked-lists/LINKLISTF/problems/CRITLIST?tab=statement


int solve(Node* head){
    
    int count = 0;
    Node * prev = head;
    Node* curr = head->next;
    while(curr ->next != NULL && curr != NULL){
        if(curr->data > prev -> data && curr->data > curr->next->data){
            count++;
        }else if(curr->data < prev->data && curr->data < curr ->next->data){
            count++;
        }
        prev = curr;
        curr = curr -> next;
    }
    return count;
}
