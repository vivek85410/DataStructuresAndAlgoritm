void removeAllOccurrencesOfChar(char input[], char c) {
    int n = strlen(input);
    int i=0;
    for(int j=0;j<n;j++){
        if(input[j]==c){
            continue;
        }

        input[i] = input[j];
        i++;
    }
    for(int k=i;k<n;k++){
        input[k]=0;
    }
}
