#include<iostream>
using namespace std;

int main() {
	int n;
	cin>>n;
	int oddSum=0;
	int evenSum = 0;
	while(n>0){
		int result = n%10;
		if(result%2==0){
			evenSum+=result;
		}else{
			oddSum+=result;
		}
		n/=10;
	}
	cout<<evenSum<< " "<<oddSum<<endl;
	return 0;
}
