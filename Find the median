code link - https://www.geeksforgeeks.org/problems/find-the-median0527/1


class Solution
{
public:
	public:
		int find_median(vector<int> v)
		{
		    sort(v.begin(),v.end());
		    int len = v.size();
		    if(len%2==0){
		        return (v[len/2]+v[len/2-1])/2;
		    }
		    else{
		        return v[len/2];
		    }
		}
};
