#include<iostream>
using namespace std;

int main() {
	// Write your code here

	int n;
	cin>>n;

	for(int i=1;i<=n;i++){
		for(int j=1;j<=i;j++){
			if( j==1 || j==i){
				cout<<1;
			}else{
				cout<<2;
			}
		}
		cout<<endl;
	}
	return 0;
}
