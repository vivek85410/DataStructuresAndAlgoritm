code link - https://www.geeksforgeeks.org/dsa/reverse-an-array-in-groups-of-given-size/



#include <bits/stdc++.h>
using namespace std;

void reverseIngroups(vector<int>& arr, int k){
    
    int n = arr.size();
    for(int i=0;i<n;i+=k){
        int left = i;
        int right = min(i+k-1,n-1);
        while(left<right){
            swap(arr[left++],arr[right--]);
        }
    }
}

int main()
{
   vector<int> arr = {1,2,3,4,5,6,7,8};
   int k = 3;
   reverseIngroups(arr,k);
   
   for(int i:arr){
       cout<<i<<" ";
   }
   
    return 0;
}
